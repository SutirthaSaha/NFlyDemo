<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.JobWiseFragments.JobRoleOverviewFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:layout_marginTop="5dp"
                        android:lineSpacingMultiplier="1.3"
                        android:textColor="#000"
                        android:textSize="15sp"
                        app:fontFamily="@font/roboto"
                        android:text="Introduction"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="7dp"
                        android:lineSpacingMultiplier="1.3"
                        android:textColor="#000"
                        android:textSize="15sp"
                        app:fontFamily="@font/roboto"
                        android:id="@+id/jobRoleOverViewIntro"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="15sp"
                        android:lineSpacingMultiplier="1.3"
                        android:textColor="#000"
                        app:fontFamily="@font/roboto"
                        android:text="Similar Jobs"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textSize="15sp"
                        android:lineSpacingMultiplier="1.3"
                        android:textColor="#000"
                        app:fontFamily="@font/roboto"
                        android:layout_marginBottom="4dp"
                        android:id="@+id/jobRoleOverViewSimilarJobs"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="3dp"
                android:layout_marginRight="3dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:lineSpacingMultiplier="1.3"
                        android:textSize="15sp"
                        android:textColor="#000"
                        app:fontFamily="@font/roboto"
                        android:text="Nature of Work"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="6dp"
                        android:lineSpacingMultiplier="1.3"
                        android:textSize="15sp"
                        android:textColor="#000"
                        app:fontFamily="@font/roboto"
                        android:layout_marginBottom="4dp"
                        android:id="@+id/jobRoleOverViewNatOfWork"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:lineSpacingMultiplier="1.3"
                    android:textColor="#000"
                    android:textSize="15sp"
                    app:fontFamily="@font/roboto"
                    android:text="Eligibility Criteria"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingMultiplier="1.3"
                    android:textColor="#000"
                    android:textSize="15sp"
                    app:fontFamily="@font/roboto"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/jobRoleOverViewEliCri"/>

            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:lineSpacingMultiplier="1.3"
                    android:textColor="#000"
                    app:fontFamily="@font/roboto"
                    android:text="Skills Required"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="15sp"
                    android:layout_marginBottom="4dp"
                    android:lineSpacingMultiplier="1.3"
                    android:textColor="#000"
                    app:fontFamily="@font/roboto"
                    android:id="@+id/jobRoleOverViewSkillsReq"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:lineSpacingMultiplier="1.3"
                    android:textColor="#000"
                    android:textSize="15sp"
                    app:fontFamily="@font/roboto"
                    android:text="Traits Required"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingMultiplier="1.3"
                    android:textSize="15sp"
                    android:textColor="#000"
                    app:fontFamily="@font/roboto"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/jobRoleOverViewTraitsReq"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginRight="3dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:padding="12dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:lineSpacingMultiplier="1.3"
                    android:textSize="15sp"
                    android:textColor="#000"
                    app:fontFamily="@font/roboto"
                    android:text="Job Outlook"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:lineSpacingMultiplier="1.3"
                    android:textSize="15sp"
                    android:textColor="#000"
                    app:fontFamily="@font/roboto"
                    android:layout_marginBottom="4dp"
                    android:id="@+id/jobRoleOverViewJobOutlook"/>
            </LinearLayout>

        </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</FrameLayout>