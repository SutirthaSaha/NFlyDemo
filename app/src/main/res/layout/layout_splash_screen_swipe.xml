<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center">

    <ImageView
        android:id="@+id/SplashScreenSwipeImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:src="@drawable/cv" />

    <TextView
        android:id="@+id/SplashScreenSwipeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/SplashScreenSwipeImage"
        android:foregroundGravity="center"
        android:gravity="center"
        android:text="Title"
        android:textColor="#fff"
        android:textSize="19sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/SplashScreenSwipeSubtitle"
        android:layout_below="@+id/SplashScreenSwipeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:text="Subtitle"
        android:textColor="#fff"
        android:textSize="15sp" />

</RelativeLayout>