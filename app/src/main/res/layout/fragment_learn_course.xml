<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.LearnCourseFragment">
    <android.support.v4.widget.NestedScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:src="@drawable/gradient_one"
            android:layout_height="210dp"
            android:id="@+id/learnCourseImage"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/learnCourseImageTitle"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:foregroundGravity="center"
            android:textColor="#fff"
            android:text="Courses"
            android:gravity="center"
            android:shadowColor="#000000"
            android:shadowDx="1.5"
            android:shadowDy="1.5"
            android:shadowRadius="1.6"
            android:layout_marginTop="25dp"/>

    </RelativeLayout>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:nestedScrollingEnabled="false"
        android:backgroundTint="#dee0f9"
        android:layout_marginBottom="5dp"

        app:cardPreventCornerOverlap="false"
        app:cardElevation="0dp">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:nestedScrollingEnabled="false"
            android:layout_height="wrap_content"
            android:id="@+id/learnCourseBannerIconsRecyclerView">
        </android.support.v7.widget.RecyclerView>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_margin="7dp"
        android:layout_height="wrap_content"
        android:nestedScrollingEnabled="false"
        android:id="@+id/learnCourseRecyclerView"
        />


</LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</LinearLayout>